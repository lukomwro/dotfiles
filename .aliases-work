# uxpin
alias am='rm ./public/uxpin.js; make'
alias amw='rm -rf ./public/*; clear && make watch'
alias em='rm ./dist/engine.js; make'
alias emw='rm ./dist/engine.js; gulp watch'
alias asup='git pull && gulp build:debug'
alias previewup='cp ~/Workspace/uxpin-docker/node_modules/uxpin-engine/dist/engine.js ~/Workspace/uxpin-docker/preview/public/node_modules/uxpin-engine/dist/engine.js && make build restart'
alias rbapp='app && cd node_modules/uxpin-engine && gulp build:debug && cd - && ./node_modules/.bin/browserify editor/js/app.jsx -t [ babelify ] -t [ envify --NODE_ENV development ] > public/uxpin.js'
alias dockertime='docker run -it --rm --privileged --pid=host debian nsenter -t 1 -m -u -n -i date -u $(date -u +%m%d%H%M%Y)'
alias reactmod='jscodeshift -t /Users/lukom/Workspace/react-codemod/transforms/class.js --mixin-module-name=react-addons-pure-render-mixin --flow=true --pure-component=true --remove-runtime-proptypes=false'
alias engineup='yarn upgrade @uxpin/engine && git commit -am "yarn - upgrade uxpin-engine"'
alias lux='ls -l node_modules | grep uxpin'
alias eslintc='git diff --cached --name-only | xargs node_modules/.bin/eslint'
projects=( app api code-tools code-sync export-plugins preview dashboard )
for name in "${projects[@]}"; do
    alias $name="cd ~/Workspace/uxpin-docker/$name"
done
projects=( uxpin-engine uxpin-shared-components )
for name in `ls ~/Workspace/uxpin-docker/shared`; do
    alias $name="cd ~/Workspace/uxpin-docker/shared/$name"
done
alias run-app="docker-compose up -d registrator app api api-migrations dashboard pubsub"
alias run-app-shots="docker-compose up -d registrator app api api-migrations dashboard pubsub preview crons shots"
